@model PUC.LDSI.Domain.Entities.Disciplina

@{
    ViewData["Title"] = "Deletar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="uk-background-cover uk-background-blend-soft-light uk-background-secondary" style="background-image: url(@Url.Content("~/images/dashboardbackground.jpg"))">
    <div class="uk-height-viewport">
        <div class="uk-section">
            <div class="uk-card uk-card-default uk-width-1-2@m uk-horizontal-center">
                <div class="uk-card-header">
                    <h3 class="uk-card-title uk-margin-remove-bottom"> Apagar Disciplina</h3>
                    <p class="uk-text-danger"> Você tem certeza que deseja apagar @Html.DisplayFor(model => model.Nome)?</p>
                </div>
                <div class="uk-card-body">
                    <ul class="uk-list uk-list-divider">
                        <li>
                            <span class="uk-text-bold uk-display-block">@Html.DisplayNameFor(model => model.Nome) </span>
                            @Html.DisplayFor(model => model.Nome)
                        </li>
                        <li>
                            <span class="uk-text-bold  uk-display-block">@Html.DisplayNameFor(model => model.AtualizadoEm) </span>
                            @Html.DisplayFor(model => model.AtualizadoEm)
                        </li>
                    </ul>
                </div>
                <div class="uk-card-footer">
                    <div class="uk-clearfix">
                        <div class="uk-float-left">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Deletar"  class="uk-button uk-button-danger" />
                            </form>
                        </div>
                        <div class="uk-float-right">
                            <a asp-action="Index" class="uk-button uk-button-default">Voltar para a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
